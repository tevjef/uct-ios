source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '9.0'
use_frameworks!

target ‘UniversityCourseTracker’ do
    # For network connection
    pod 'Alamofire', '~> 3.4'

    # To generate model objects from a .proto
    pod 'ProtocolBuffers-Swift’

    # For level logging done right! 
    pod 'CocoaLumberjack/Swift'

    # Because constraint syntax is still alien to me
    pod 'PureLayout'

    # For messaging and configruation from backend
    pod 'Firebase'
    pod 'Firebase/Crash'
    pod 'Firebase/RemoteConfig'
    pod 'Firebase/Messaging'
    pod 'Fabric'
    pod 'Crashlytics'
end
